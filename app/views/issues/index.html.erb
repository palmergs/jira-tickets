<h1>Issues</h1>
<%= params.inspect %>

<table class="table">
  <thead>
    <tr>
      <% IssuesController::COLS_TO_HEADERS.each do |k, v| %>
        <th><%= v %></th>
      <% end %>
      <th>Components</th>
      <th>Labels</th>
    </tr>
  </thead>
  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.id, issue %></td>
        <% IssuesController::COLS_TO_HEADERS.each do |k, v| %>
          <td><%= issue[k] %></td>
        <% end %>
        <td><%= issue.issue_components.map(&:name).join(', ') %></td>
        <td><%= issue.issue_labels.map(&:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
